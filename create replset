mkdir -p /data/db/local_replset/rs0-0 /data/db/local_replset/rs0-1 /data/db/local_replset/rs0-2
mkdir -p /data/db/local_replset/rs0-0-logs /data/db/local_replset/rs0-1-logs /data/db/local_replset/rs0-2-logs
mongod --port 28017 --replSet local_replset --dbpath /data/db/local_replset/rs0-0 --logpath /data/db/local_replset/rs0-0-logs/log0.log --fork
mongod --port 28018 --replSet local_replset --dbpath /data/db/local_replset/rs0-1 --logpath /data/db/local_replset/rs0-1-logs/log1.log --fork
mongod --port 28019 --replSet local_replset --dbpath /data/db/local_replset/rs0-2 --logpath /data/db/local_replset/rs0-2-logs/log2.log --fork
mongo --port 28017
rsconfig = {
           _id: "local_replset",
           members: [
                      {
                       _id: 0,
                       host: "ChrisCunninghams-MacBook-Pro.local:28017"
                      }
                    ]
         }

rs.initiate(rsconfig)
# this should assign PRIMARY of the replset to my local host on port 28017
# and return with { "ok" : 1 }


rs.conf()
# this should show just the PRIMARY sitting by itself

rs.add("ChrisCunninghams-MacBook-Pro.local:28018")
rs.add("ChrisCunninghams-MacBook-Pro.local:28019")
rs.status()
# this should show a replica set working
